{
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "runArgs": [
        "--gpus=all",
        "--network",
        "ollama_network",
        "--name",
        "devcontainer_ollama"
    ],
    "postStartCommand": "ollama serve & sleep 5 && ollama run llama3",
    "customizations": {
        "vscode": {
            "settings": {
                "remote.autoForwardPorts": false
            }
        }
    }
}